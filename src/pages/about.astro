<style>
    #about-top {
        width: 100%;
        background: whitesmoke;
        padding-bottom: 1rem;
    }

    .header-hero {
        background-size: cover;
        height: 100%;
        width: 100%;
        display: flex;
        justify-content:center;
    }

    .hero-with-header {
        backdrop-filter: brightness(50%);
        padding: 3rem 0;
        height: 100%;
        width: 100%;
        display: flex;
    }

