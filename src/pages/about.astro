        }

        .about-description {
            padding: 1rem 1rem;
        }

    #quality-companies {
        padding-top: 2rem;
        background-color: #282828;
        display: flex;
        flex-direction:column;
        justify-content:center;
        width: 100%;
    }

    .company-container {
        display: flex;
        flex-direction:column;
        justify-content:center;
        gap: 0 1rem;
        padding: 0 1rem 2rem 1rem;
    }

    .card-holder {
        width: 100%;
        padding: 0;
        margin: 0;
    }

    .company {
        background: whitesmoke;
        border-radius: 2px;
        box-shadow: 5px 5px 5px #141414;
        transition: all .4s ease-in-out;
        max-width: 20rem;
        margin: 0 auto;
    }

    .company:hover {
        background-color: white;
        transform: scale(1.03);
    }

    .company img {
        max-width: auto;
        max-height: 5rem;
        margin-bottom: -0.3rem;
    }

    .logo-title {
        float: right;
        font-family: calistoga;
        text-transform: uppercase;
        font-size: 0.9rem;
    }

    .logo-title p {
        margin-left:1rem;
    }

    .card-info {
margin: 1rem 0 0 1rem;
padding: 0;
    }

    .card-info .title {
        font-size: 0.7rem;
        font-weight: 400;
        text-transform: uppercase;
    }

    .card-info .business {
        font-size: 0.7rem;
        font-weight: 400;
        margin-top:-0.5rem;
    }

    .card-info .name {
        margin-bottom: -0.2rem;
    }

    .card-info .title .name {
        margin: 0;
        padding: 0;
    }

    .card-bottom {
        font-size: 0.7rem;
        padding: 1rem 0 0 0;
        margin: 0;
        text-align: center;
        margin-bottom: 0.5rem;
    }

    .card-info dd{
        list-style: none;
        margin: 0;
        padding: 0;
        font-size: 0.8rem;
    }

    .card-info dd label {
        font-weight: 600;
        text-transform: uppercase;
        font-size:0.6rem;
        color: gray;
    }

    #careers {
        background-color: #282828;
    }

    .career-container {
        color: whitesmoke;
        padding-bottom: 1rem;
        text-align: center;
    }

