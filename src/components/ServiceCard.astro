---
const { title, subtitle, description, backgroundImage } = Astro.props;
---

<div class="service-card-wrapper">
<div class="card" style={`background-image: url(${backgroundImage}`}>
  <div class="card-image-adjust">
  <div class="card-content">
    <h3 class="card-title">{title}</h3>
    <h4 class="card-subtitle">{subtitle}</h4>
  </div>
    <div class="overlay">
    <p class="card-description">{description}</p>
    </div>
  </div>
  </div>
</div>

<style>
  
  .card {
    position: relative;
    background-size: cover;
    background-position: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 1rem;
    overflow: hidden;
    height:100%;
    text-align: center;
    width: 100%;
    filter: saturate(1);
    object-fit: cover;
    max-width:20rem; 
  }

  .card-image-adjust {
    background-image: linear-gradient(rgba(0, 0, 0, 0.2),rgba(0, 0, 0, 0.2));
    height: 100%;
    width: 100%;
    padding: 0;
    margin: 0;
  }

  .card-content {
    padding: 1rem 0;
  }

  .overlay {
    background: rgba(245, 245, 245, 0.7);
    width: 100%;
    height: 100%;
    display: flex;
    flex: 1;
    align-items: flex-end;
    backdrop-filter: blur(2px);
    padding: 0.5rem 0 0 0;
  }

  .card-title {
    text-shadow: 2px 2px 10px #000000;
  }

  .card-subtitle {
    font-size: 1.2rem;
    margin: 0 0 0.5rem 0;
    font-weight: 600;
    text-shadow: 2px 2px 10px #000000;
  }

  .card-description {
    text-align: left;
  }

  .card-title, .card-subtitle {
    color: white;
  }

</style>


