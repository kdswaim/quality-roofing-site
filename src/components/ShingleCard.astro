---
const { colorName, backgroundImage, alt } = Astro.props;
---
<div class="card-item">
  <img src={backgroundImage} alt={alt} class="card-image" />
<p class="color-name">{colorName}</p>
</div>

<style>

.card-item {
  position: relative;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  overflow: hidden;
  padding: 1rem;
  width: 7rem;
  height: 7rem;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  background-size: cover;
  background-position: center;
  border-radius: 10px;
}

.card-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
  scale: 2;
}

.color-name {
  position: absolute;
  bottom: 0;
  left: 0;
  margin: 0;
  padding: 0.5rem;
  font-size: 0.9rem;
  font-weight: 600;
  color: whitesmoke;
  width: 100%;
  z-index:1;
  text-align: left;
  text-shadow: 1px 1px 10px #000000;
} 

</style>


